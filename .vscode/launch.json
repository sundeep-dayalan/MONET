{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Uvicorn (app.main)",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/core",
      "module": "uvicorn",
      "args": ["app.main:app", "--reload", "--port", "8000", "--host", "127.0.0.1"],
      "envFile": "${workspaceFolder}/packages/core/.env",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Run run.py",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/core",
      "program": "${workspaceFolder}/packages/core/run.py",
      "envFile": "${workspaceFolder}/packages/core/.env",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Attach (5678)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "127.0.0.1",
        "port": 5678
      }
    }
  ]
}
