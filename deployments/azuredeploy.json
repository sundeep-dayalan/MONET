{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "projectName": {
      "type": "string",
      "defaultValue": "monet",
      "minLength": 3,
      "maxLength": 10
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "staticWebAppLocation": {
      "type": "string",
      "defaultValue": "Central US",
      "allowedValues": [
        "Central US", "East US 2", "East Asia", "West Europe", "West US 2"
      ]
    },
    "tryFreeTier": {
      "type": "bool",
      "defaultValue": true
    }
  },
  "variables": {
    "uniqueSuffix": "[substring(uniqueString(resourceGroup().id), 0, 8)]",
    "storageAccountName": "[concat(parameters('projectName'), variables('uniqueSuffix'), 'storage')]",
    "cosmosAccountName": "[concat(parameters('projectName'), '-', variables('uniqueSuffix'), '-cosmos')]",
    "appInsightsName": "[concat(parameters('projectName'), '-', variables('uniqueSuffix'), '-insights')]",
    "keyVaultName": "[concat(parameters('projectName'), '-', variables('uniqueSuffix'), '-kv')]",
    "functionAppName": "[concat(parameters('projectName'), '-', variables('uniqueSuffix'), '-api')]",
    "staticWebAppName": "[concat(parameters('projectName'), '-', variables('uniqueSuffix'), '-web')]",
    "deploymentScriptUri": "[uri(uri(deployment().properties.templateLink.uri, '..'), 'full-deploy.sh')]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "sku": { "name": "Standard_LRS" },
      "kind": "StorageV2",
      "properties": {
        "supportsHttpsTrafficOnly": true,
        "minimumTlsVersion": "TLS1_2",
        "allowBlobPublicAccess": false,
        "allowSharedKeyAccess": false
      }
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2023-04-15",
      "name": "[variables('cosmosAccountName')]",
      "location": "[parameters('location')]",
      "kind": "GlobalDocumentDB",
      "properties": {
        "databaseAccountOfferType": "Standard",
        "consistencyPolicy": { "defaultConsistencyLevel": "Session" },
        "locations": [ { "locationName": "[parameters('location')]", "failoverPriority": 0 } ],
        "capabilities": [ { "name": "EnableServerless" } ],
        "enableFreeTier": "[parameters('tryFreeTier')]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2023-02-01",
      "name": "[variables('keyVaultName')]",
      "location": "[parameters('location')]",
      "properties": {
        "tenantId": "[subscription().tenantId]",
        "sku": { "family": "A", "name": "standard" },
        "enableRbacAuthorization": true,
        "enableSoftDelete": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2023-01-01",
      "name": "[variables('functionAppName')]",
      "location": "[parameters('location')]",
      "kind": "functionapp,linux",
      "dependsOn": [ "[variables('storageAccountName')]" ],
      "identity": { "type": "SystemAssigned" },
      "properties": {
        "httpsOnly": true,
        "siteConfig": {
          "appSettings": [
            { "name": "AzureWebJobsStorage", "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountName'), '2023-01-01').keys[0].value)]" },
            { "name": "FUNCTIONS_WORKER_RUNTIME", "value": "node" }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Web/staticSites",
      "apiVersion": "2023-01-01",
      "name": "[variables('staticWebAppName')]",
      "location": "[parameters('staticWebAppLocation')]",
      "sku": { "name": "Free", "tier": "Free" },
      "properties": {
        "repositoryUrl": "https://github.com/sundeep-dayalan/MONET",
        "branch": "main",
        "buildProperties": { "appLocation": "/packages/client", "apiLocation": "/packages/core", "outputLocation": "dist" }
      }
    },
    {
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "name": "fullDeployScript",
      "location": "[parameters('location')]",
      "kind": "AzureCLI",
      "identity": { "type": "SystemAssigned" },
      "properties": {
        "azCliVersion": "2.58.0",
        "primaryScriptUri": "[variables('deploymentScriptUri')]",
        "arguments": "[concat(parameters('projectName'), ' ', variables('storageAccountName'), ' ', variables('cosmosAccountName'), ' ', variables('appInsightsName'), ' ', variables('keyVaultName'), ' ', variables('functionAppName'), ' ', variables('staticWebAppName'))]",
        "cleanupPreference": "Always",
        "retentionInterval": "P1D"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', variables('functionAppName'))]",
        "[resourceId('Microsoft.Web/staticSites', variables('staticWebAppName'))]",
        "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"
      ]
    }
  ],
  "outputs": {
    "frontendUrl": { "type": "string", "value": "[concat('https://', variables('staticWebAppName'), '.azurestaticapps.net')]" },
    "backendUrl": { "type": "string", "value": "[concat('https://', variables('functionAppName'), '.azurewebsites.net')]" }
  }
}