{
  "name": "monet-client",
  "description": "The client application for the MONET platform.",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "author": {
    "name": "Sundeep Dayalan",
    "email": "sundeep.dayalan@gmail.com"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test:staged": "cross-env CI=1 react-scripts test --findRelatedTests",
    "test": "vitest --coverage",
    "postinstall": "husky install",
    "lint": "eslint --fix .",
    "serve": "serve --no-clipboard --single --listen 3000 dist",
    "generate": "plop",
    "validate-types": "tsc --project tsconfig.json --pretty --noEmit",
    "validate": "yarn validate-types && yarn lint && yarn test"
  },
  "dependencies": {
    "@fontsource/roboto": "^5.2.6",
    "@stylistic/eslint-plugin": "^5.3.1",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.18",
    "history": "^5.3.0",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "lodash": "^4.17.21",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-error-boundary": "^6.0.0",
    "react-i18next": "^15.7.3",
    "react-router-dom": "^7.8.2",
    "tailwind-merge": "^3.3.1",
    "type-fest": "^4.41.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vite-tsconfig-paths": "^5.1.4",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@mswjs/data": "^0.16.2",
    "@startercraft/cli": "^1.0.1",
    "@stylistic/eslint-plugin-ts": "^4.4.1",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.13",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/dompurify": "^3.2.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/marked": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "@vitest/coverage-istanbul": "^3.2.4",
    "autoprefixer": "^10",
    "browserslist-to-esbuild": "^2.1.1",
    "cross-env": "^10.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^7.6.8",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "is-ci": "^4.1.0",
    "is-ci-cli": "^2.2.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.6",
    "msw": "^2.11.1",
    "npm-run-all": "^4.1.5",
    "plop": "^4.0.2",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "react-test-renderer": "^19.1.1",
    "sass": "^1.92.1",
    "serve": "^14.2.5",
    "tailwindcss": "^4.1.13",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "vite-plugin-string": "^1.2.3",
    "vite-vitals": "^1.0.2",
    "vitest": "^3.2.4"
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(ts|tsx|js)": [
      "yarn lint",
      "npm run test:staged",
      "git add"
    ]
  },
  "resolutions": {
    "vitest": "^0.34.0"
  }
}

